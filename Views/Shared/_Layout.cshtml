<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlueBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="p-1 mb-3 bg-dark text-white">
        <div class="container navbar justify-content-between">
            <div class="d-flex flex-wrap align-items-center justify-content-lg-start">
                <a class="navbar-brand" style="color: white;" asp-area="" asp-controller="Feed" asp-action="Index">
                    <img src="~/css/logo-blue.gif" width="70" height="30" />
                    BlueBook
                </a>
                <form asp-area="" asp-controller="User" asp-action="PesquisarUsuario" class="input-group col">
                    <input name="NomeUsuario" type="text" class="form-control" placeholder="Usuario..." aria-label="Usuario..." aria-describedby="button-addon2">
                    <button class="btn btn-secondary" type="submit" id="button-addon2">Pesquisar</button>
                </form>
            </div>
            <partial name="_LoginPartial" />
        </div>
    </header>
    @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - BlueBook - <a href="https://github.com/Caioferrari04">Meu github</a>
        </div>
    </footer>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.7/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
